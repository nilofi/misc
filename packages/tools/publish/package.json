    "dev": "tsc -w",
    "clean": "rimraf \"./dist\" && rimraf \"./temp\""
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/semver": "^7.5.8",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@inquirer/prompts": "^5.3.8",
    "@xenon.js/misc": "workspace:^",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "execa": "^9.3.1",
    "octokit": "^4.0.2",
    "semver": "^7.6.3"
  }
